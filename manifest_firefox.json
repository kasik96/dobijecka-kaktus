{
  "name": "Kaktus Dobíječka",
  "version": "0.1",
  "description": "Rozšíření které vás upozorní na Aktivní dobíječku u Kaktusu",
  "manifest_version": 2,
  "permissions": [
    "notifications",
    "alarms",
    "background",
    "storage",
    "https://www.mujkaktus.cz/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "muj_kaktus_id_kasik"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "32": "assets/images/icon32.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  }
}
